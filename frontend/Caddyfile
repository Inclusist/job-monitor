:{$PORT}

handle /api/* {
    reverse_proxy {$BACKEND_URL} {
        header_up X-Forwarded-Proto https
    }
}
handle /login/* {
    reverse_proxy {$BACKEND_URL} {
        header_up X-Forwarded-Proto https
    }
}
handle /authorize/* {
    reverse_proxy {$BACKEND_URL} {
        header_up X-Forwarded-Proto https
    }
}
handle /logout {
    reverse_proxy {$BACKEND_URL} {
        header_up X-Forwarded-Proto https
    }
}
handle /download/* {
    reverse_proxy {$BACKEND_URL} {
        header_up X-Forwarded-Proto https
    }
}

handle {
    root * /app/dist
    try_files {path} /index.html
    file_server
}
